class Solution:
    def longestNiceSubarray(self, nums: List[int]) -> int:
        ans = 0
        curr = 0
        l = 0
        for r, num in enumerate(nums):
            while curr & num:
                curr ^= nums[l]
                l += 1
            curr |= num
            ans = max(ans, r - l + 1)
        return ans
